<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneBook.MainPage">

    <VerticalStackLayout>
        <Label 
            Text="Enter Phone Number"
            FontSize="20"/>
        <Entry 
            x:Name="PhoneNumberText"
            Text="-511-NETMAUI"/>
        <Button 
            x:Name="TranslateButton"
            Text="Translate"
            Clicked="OnTranslate"/>
        <Button 
            x:Name="CallButton"
            Text="Call"
            IsEnabled="False"
            Clicked="OnCall"/>
        
    </VerticalStackLayout>
</ContentPage>
